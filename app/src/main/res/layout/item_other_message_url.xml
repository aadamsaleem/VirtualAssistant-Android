<?xml version="1.0" encoding="utf-8"?><!--item_other_message.xml- for bot message -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#f0f0f0"
        app:cmv_backgroundColorPressed="#ff00bcd4"
        app:cmv_cornerRadius="12dp"
        app:cmv_showArrow="false">


            <ImageView
                android:id="@+id/website_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/website_thumbnail"
            android:text="Helloworld"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>